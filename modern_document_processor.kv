#:kivy 2.0.0

<IntegratedApp>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

<TabbedPanel>:
    do_default_tab: False
    tab_width: self.width / 3
    tab_height: 40
    background_color: 0.15, 0.15, 0.25, 1

<TabbedPanelItem>:
    background_color: 0.2, 0.2, 0.3, 1
    color: 0.9, 0.9, 1, 1

<Button>:
    background_color: 0.2, 0.4, 0.8, 1
    color: 1, 1, 1, 1
    size_hint_y: None
    height: 40
    font_size: 16

<TextInput>:
    background_color: 0.2, 0.2, 0.3, 1
    foreground_color: 1, 1, 1, 1
    font_size: 16

<Label>:
    color: 0.9, 0.9, 1, 1
    font_size: 16

<Slider>:
    cursor_size: (20, 20)
    cursor_image: 'data/images/slider_cursor.png'

<ScrollView>:
    bar_width: 10
    bar_color: 0.4, 0.6, 0.8, 1
    bar_inactive_color: 0.2, 0.3, 0.4, 1
    effect_cls: "ScrollEffect"
    scroll_type: ['bars']
